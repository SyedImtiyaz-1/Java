import java.util.Scanner;
class Main {
    public static void main(String[] args) {
        Scanner i = new Scanner(System.in);
        System.out.print("Enter the Number : ");
        int n = i.nextInt();
        int temp = n;

        if (n % 2 == 0) {
            System.out.println(n);
        }
         if (n % 2 == 1) {
            int ans = temp * 2;
            System.out.println(ans);
        }
    }
}

